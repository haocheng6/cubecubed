{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "@consts": ["src/constants.ts"],
            "@converters/*": ["src/converters/*"],
            "@utils/*": ["src/utils/*"],
            "@math/*": ["src/math/*"],
            "@scene/*": ["src/scene/*"],
            "@group/*": ["src/svg/group/*", "src/canvas/group/*"],
            "@configs/geometry/*": ["src/svg/cubicons/geometry/configs/*"],
            "@cubicons/*": ["src/svg/cubicons/*", "src/canvas/cubicons/*"],
            "@animations/*": ["src/svg/animations/*", "src/canvas/animations/*"]
        },
        "rootDir": "./src",
        "allowJs": true,
        "outDir": "./compile",
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
}
